	public static void main(String[] args) {
		String res="<HTML>\n<HEAD>\n<TITLE>ABK</TITLe>\n" +
				"<SCRIPT type='text/javascript' DeFeR>alert('body1');</script>\n" + 
				"<script DefeR='DEFER'>alert('body2');</SCRIPT>\n" +
